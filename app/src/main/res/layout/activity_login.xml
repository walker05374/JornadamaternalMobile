<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/inicio"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:fillViewport="true"
    tools:context=".login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="465dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/azul_border"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical"
            android:padding="26dp">

            <EditText
                android:id="@+id/login_username"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/azul_border"
                android:drawableLeft="@drawable/ic_baseline_person_pin_24"
                android:drawablePadding="8dp"
                android:hint="usuario"
                android:padding="8dp"
                android:textColor="@color/azul" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="296dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/azul_border"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="senha"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/azul" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="33dp"
                android:forceHasOverlappingRendering="false"
                android:foreground="@drawable/azul_border"


                android:text="login"
                android:textAllCaps="false"
                android:textColorHighlight="@color/azul"
                android:textSize="20sp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/signupRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="nÃ£o tem conta? Cadastre-se"
                android:textColor="@color/azul"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/signupRedirectText1"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="Redefinir a senha"
                android:textAlignment="center"
                android:textColor="@color/azul"
                android:textSize="18dp"
                android:textStyle="italic" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_facebook_24" />

                <ImageView
                    android:id="@+id/google"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/ic_baseline_google_24" />
            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>